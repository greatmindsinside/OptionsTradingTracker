# Environment variables for local development
# Copy this file to .env.local and customize for your setup

# Application
VITE_APP_TITLE="Options Trading Tracker"
VITE_APP_VERSION="0.1.0"
VITE_APP_DESCRIPTION="Track and analyze your options trading strategies"

# API Configuration (if needed in future)
VITE_API_BASE_URL="http://localhost:3001"
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Database Configuration
VITE_DB_NAME="options_tracker"
VITE_DB_VERSION=1

# CSV Import Settings
VITE_MAX_FILE_SIZE_MB=50
VITE_SUPPORTED_BROKERS="td_ameritrade,schwab,robinhood,etrade,interactive_brokers"

# Chart Configuration
VITE_CHART_THEME="light"
VITE_CHART_ANIMATION_DURATION=300

# Security (for Content Security Policy)
VITE_CSP_NONCE=""